<h1>BRUKERE</h1>

<table>
  <thead>
    <tr>
      <th>Fornavn</th>
      <th>Etternavn</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= link_to 'Vis', user %></td>
        <td><%= link_to 'Endre bruker', edit_user_path(user) %></td>
        <td><%= link_to 'Slett', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

