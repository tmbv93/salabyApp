<div class="row">
  <div class="large-12 medium-12 small-12 columns">
    <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages' %>
        <p><strong>Navn: </strong>
         <%= @user.first_name %> <%= @user.last_name %> | <strong>Brukernavn : </strong><%= @user.username %> </p>
    </div>
    </div>
    <div class="row">
        <div class="large-12 medium-12 small-12 columns">
            <label>Endre beskrivelse</label>
            <%= f.text_area :description %>
        </div>
    </div>
    <div class="row">
        <div class="large-6 medium-12 small-12 columns">    
            <label>Nytt passord</label>
            <%= f.password_field :password %>
        </div>
        <div class="large-6 medium-12 small-12 columns">
            <label>Gjenta passordet</label>
                <%= f.password_field :password_confirmation %>
        </div>
    </div>
      <div class="row">
            <div class="large-6 medium-12 small-12 columns right ">
                <%= f.submit "Lagre endringer", class: "button right " %>
          </div>
        </div>
    <% end %>

    <div class="topMarg"></div>